<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewDetailDailyDayOfWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ВТ"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewDetailDailyDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2.12"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageViewDetailDailyWeatherIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/weather_icon" />
    <TextView
        android:id="@+id/textViewDetailDailyWeatherDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Хмарно з проясненнями"
        android:lines="2"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textViewDetailDailyMaxTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24*C"
        android:gravity="center"/>
    <TextView
        android:id="@+id/textViewDetailDailyMinTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12*C"
        android:gravity="center"/>
</LinearLayout>